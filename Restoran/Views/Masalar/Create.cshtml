@model MyClasses.Masalar

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutKontrolPanel";

}
@inject MyData.Ihelper<MyClasses.Subeler> Sube

<div style="margin:100px">
<h1>Create</h1>

<h4>Masalar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubeAdi" class="control-label"></label>
                    <select asp-for="SubeAdi" class="form-control">
                        <option selected disabled>Lütfen boş bırakmayın</option>
                        @foreach (var item in Sube.getAllData())
                        {
                            <option value="@item.SubeAdi">@item.SubeAdi</option>
                        }

                    </select>
                <span asp-validation-for="SubeAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="masalar" class="control-label"></label>
                <input asp-for="masalar" class="form-control" />
                <span asp-validation-for="masalar" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="Mycheck" class="control-label"></label>
                    <select asp-for="Mycheck" class="form-control">
                        <option selected disabled>Lütfen boş bırakmayın</option>

                        <option value="true">Dolu</option>
                        <option value="false">Bos</option>
                        

                    </select>
                    <span asp-validation-for="Mycheck" class="text-danger"></span>
                </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
